    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-toast": "^1.2.15",
    "bcryptjs": "^3.0.3",
    "better-auth": "^1.4.15",
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "lucide-react": "^0.562.0",
    "next": "14.2.35",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.12",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.71.1",
    "resend": "^6.7.0",
    "sonner": "^2.0.7",
