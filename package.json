{
  "name": "world-wide-webb",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx scripts/seed-admin.ts",
    "db:backup": "tsx scripts/backup-database.ts --verify",
    "db:backup:offsite": "tsx scripts/backup-database.ts --verify --offsite-dir",
    "db:restore": "tsx scripts/restore-database.ts",
    "db:restore:list": "tsx scripts/restore-database.ts --list",
    "generate-secrets": "tsx scripts/generate-secrets.ts",
    "generate-secrets:auto": "tsx scripts/generate-secrets.ts --auto",
    "setup": "pnpm db:generate && pnpm db:migrate && pnpm db:seed",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
